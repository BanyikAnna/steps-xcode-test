name: "NEW Xcode Test"
description: |
  Runs Xcode's `test` action.
website: https://github.com/bitrise-io/steps-new-xcode-test
fork_url: https://github.com/bitrise-io/steps-new-xcode-test
source:
  git: https://github.com/bitrise-io/steps-new-xcode-test.git
host_os_tags:
  - "osx-10.10"
project_type_tags:
  - ios
type_tags:
  - build
  - xcode
is_requires_admin_user: false
inputs:
  -
    mapped_to: project_path
    title: "Project (or Workspace) path"
    description: |
      A `.xcodeproj` or `.xcworkspace` path.
    is_required: true
    is_expand: false
  -
    mapped_to: scheme
    title: "Scheme name"
    description: |
      The Scheme to use.
    is_required: true
    is_expand: false
  - workdir:
    opts:
      title: "Working directory"
      description: |
        Working directory of the step.
        You can leave it empty to don't change it.
      is_required: false
      is_expand: false
  -
    mapped_to: simulator_device
    title: "Device"
    description: |
      Set it as it is shown in
      Xcode's device selection dropdown UI.

      A couple of examples (the
      actual available options depend on which versions
      are installed):

      * iPhone 6
      * iPhone 6 Plus
      * iPad
      * iPad Air
    is_required: false
    is_expand: false
  -
    mapped_to: simulator_os_version
    title: "OS version"
    description: |
      Set it as it is shown in
      Xcode's device selection dropdown UI.

      A couple of format examples (the
      actual available options depend on which versions
      are installed):

      * 8.4
      * latest
    is_required: false
    is_expand: false
outputs: []
